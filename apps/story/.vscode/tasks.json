{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "bun run dev",
      "group": { "kind": "build", "isDefault": true },
      "icon": { "id": "rocket", "color": "terminal.ansiGreen" },
      "presentation": { "reveal": "always", "panel": "new" },
      "isBackground": true,
      "problemMatcher": {
        "pattern": { "regexp": ".", "file": 1, "line": 2, "column": 3, "message": 4 },
        "background": { "activeOnStart": true, "beginsPattern": "storybook", "endsPattern": "Local:" }
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "bun run build",
      "group": "build",
      "icon": { "id": "package", "color": "terminal.ansiBlue" },
      "problemMatcher": []
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "bun run lint",
      "group": "test",
      "icon": { "id": "search", "color": "terminal.ansiYellow" },
      "problemMatcher": []
    },
    {
      "label": "lint:fix",
      "type": "shell",
      "command": "bun run lint:fix",
      "group": "test",
      "icon": { "id": "wrench", "color": "terminal.ansiYellow" },
      "problemMatcher": []
    },
    {
      "label": "typecheck",
      "type": "shell",
      "command": "bun run typecheck",
      "group": { "kind": "test", "isDefault": true },
      "icon": { "id": "file-code", "color": "terminal.ansiCyan" },
      "problemMatcher": "$tsc"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "bun run test",
      "group": "test",
      "icon": { "id": "beaker", "color": "terminal.ansiMagenta" },
      "problemMatcher": []
    },
    {
      "label": "test:coverage",
      "type": "shell",
      "command": "bun run test:coverage",
      "group": "test",
      "icon": { "id": "graph", "color": "terminal.ansiMagenta" },
      "problemMatcher": []
    },
    {
      "label": "visual-test",
      "type": "shell",
      "command": "bun run visual-test",
      "group": "test",
      "icon": { "id": "eye", "color": "terminal.ansiMagenta" },
      "problemMatcher": []
    }
  ]
}
