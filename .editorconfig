# EditorConfig - https://editorconfig.org
# Aligned with Biome (biome.json) settings

root = true

# =============================================================================
# DEFAULT: All files
# =============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

# =============================================================================
# JavaScript / TypeScript / JSX / TSX
# =============================================================================
[*.{js,jsx,ts,tsx,mjs,cjs,mts,cts}]
indent_size = 2
quote_type = double

# =============================================================================
# JSON / JSONC
# =============================================================================
[*.json]
indent_size = 2

[*.jsonc]
indent_size = 2

[{tsconfig.json,tsconfig.*.json,.vscode/*.json,turbo.json,biome.json}]
indent_size = 2

# =============================================================================
# YAML / YML
# =============================================================================
[*.{yaml,yml}]
indent_size = 2

# =============================================================================
# Markdown / MDX
# Trailing whitespace is meaningful in Markdown (line breaks)
# =============================================================================
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = off

# =============================================================================
# CSS / SCSS / Tailwind
# =============================================================================
[*.{css,scss,sass,less}]
indent_size = 2

# =============================================================================
# HTML / Templates
# =============================================================================
[*.{html,htm,svg}]
indent_size = 2

# =============================================================================
# Shell Scripts
# =============================================================================
[*.{sh,bash,zsh}]
indent_size = 2
end_of_line = lf

# =============================================================================
# Makefiles (require tabs)
# =============================================================================
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# =============================================================================
# Docker
# =============================================================================
[Dockerfile*]
indent_size = 2

[docker-compose*.{yml,yaml}]
indent_size = 2

# =============================================================================
# Kubernetes / Helm
# =============================================================================
[k8s/**/*.yaml]
indent_size = 2

[k8s/charts/**/*.tpl]
indent_size = 2

# =============================================================================
# GraphQL
# =============================================================================
[*.{graphql,gql}]
indent_size = 2

# =============================================================================
# Environment files
# =============================================================================
[.env*]
indent_size = 2

# =============================================================================
# Lock files / Generated - do not modify
# =============================================================================
[{bun.lockb,bun.lock,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_size = unset
indent_style = unset

# =============================================================================
# Git
# =============================================================================
[.git*]
indent_size = 2

[.gitignore]
indent_size = unset

# =============================================================================
# Storybook
# =============================================================================
[*.stories.{ts,tsx,js,jsx,mdx}]
indent_size = 2
