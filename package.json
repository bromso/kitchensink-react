{
  "name": "@repo/mono",
  "description": "Symbiora monorepo",
  "author": {
    "name": "Jonas Br√∂ms",
    "email": "jonas.broms@gmail.com"
  },
  "repository": {
    "url": "https://github.com/bromso/kitchensink-react"
  },
  "keywords": [
    "kitchensink-react",
    "monorepo",
    "turborepo",
    "next.js"
  ],
  "version": "1.0.0",
  "private": true,
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:app": "turbo build --filter @repo/app",
    "build:www": "turbo build --filter @repo/www",
    "build:docs": "turbo build --filter @repo/docs",
    "build:legal": "turbo build --filter @repo/legal",
    "dev": "turbo dev",
    "dev:app": "turbo dev --filter @repo/app",
    "dev:www": "turbo dev --filter @repo/www",
    "start": "turbo start",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "lint": "turbo lint",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "typecheck": "turbo check-types",
    "validate": "bun format && bun lint && bun check && bun run build",
    "ci": "biome ci . && turbo check-types && turbo build",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf .next",
    "doctor": "bun scripts/doctor.ts",
    "story": "bun --filter @repo/story dev",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset tag",
    "release": "bun run build && changeset publish",
    "prepare": "husky",
    "commit": "cz",
    "commitlint": "commitlint --edit"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@repo/typescript-config": "workspace:*",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "sharp": "^0.34.5",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "overrides": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.66.1",
    "@hookform/resolvers": "^5.2.2"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/node": "^25.0.2",
    "country-region-data": "^4.0.0",
    "recharts": "^3.6.0"
  }
}
